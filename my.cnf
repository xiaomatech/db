[client]
default-character-set = utf8

[mysql]
prompt = \\u@\\h \\d \\r:\\m:\\s>
no-auto-rehash
log_error_verbosity = 2

[mysqld_multi]
mysqld     = /usr/sbin/mysqld
mysqladmin = /usr/bin/mysqladmin
user       = mysql
password   = mysql

[mysql_3306]
